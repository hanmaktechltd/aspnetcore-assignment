@model IEnumerable<Queue_Management_System.Models.ServiceProviderVM>

@{
    ViewData["Title"] = "ViewServicePoints";
}

<h1>Dashboard</h1>

<p>
    <a class="btn btn-success" asp-action="CreateServiceProvider"><i class="fas fa-plus"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="EditServiceProvider" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a>
                    <a class="btn btn-info" asp-action="ViewServiceProviderDetails" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>                    
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"> <i class="far fa-trash-alt"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
