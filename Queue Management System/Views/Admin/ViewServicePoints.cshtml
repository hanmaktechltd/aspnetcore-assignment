@model IEnumerable<Queue_Management_System.Models.ServicePointVM>

@{
    ViewData["Title"] = "ViewServicePoints";
}

<h1>ViewServicePoints</h1>

<p>
    <a asp-action="CreateServicePoint">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceProviderId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceProviderId)
            </td>
            <td>
                    <a asp-action="EditServicePoint" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="ViewServicePointDetails" asp-route-id="@item.Id">Details</a>
                    <a data-id="@item.Id" type="button" class="deleteBtn">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
