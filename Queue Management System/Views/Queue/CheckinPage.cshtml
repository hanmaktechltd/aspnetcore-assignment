@model IEnumerable<Queue_Management_System.Models.ServicePointVM>

@{
    ViewData["Title"] = "Checkin Page";
}

<h1>Checkin Page</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
@*                    <input type="submit" value=@Html.DisplayFor(modelItem => item.Name) class="btn btn-primary" />*@
                 @*   <a type="button" class="btn btn-success" asp-action="AddCustomerToQueue"> @Html.DisplayFor(modelItem => item.Name)</a>
                   
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"> <i class="far fa-trash-alt"></i></button>*@
                    <button data-id="@item.Id" class="btn btn-primary allocateBtn" type="button"> @Html.DisplayFor(modelItem => item.ServiceName) </button>

                </td>
                
        </tr>
}
    </tbody>
</table>

@*<form id="allocationForm" asp-action="AllocateLeave">*@
<form id="allocationForm" asp-action="AddCustomerToQueue">
    <input type="hidden" id="leaveTypeIdAllocate" name="Id" />
</form>

@section Scripts{
    <script>
        $(function () {

            $('.deleteBtn').click(function (e) {
                swal({
                    title: "Are you sure?",
                    text: "Are you sure you want to delete this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#leaveTypeId').val(id);
                        $('#deleteFrom').submit();
                    }
                });
            });

            $('.allocateBtn').click(function (e) {
                swal({
                    title: "Are you sure?",
                    text: "Are you sure you want to allocation this leave to all employees?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#leaveTypeIdAllocate').val(id);
                        $('#allocationForm').submit();
                    }
                });
            });
        });
    </script>
}

