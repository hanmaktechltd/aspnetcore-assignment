@model ServiceProvider

<h4>Delete Service Provider</h4>

<p>Are you sure you want to delete the following service provider?</p>

<dl class="row">
    <dt class="col-sm-2">Username</dt>
    <dd class="col-sm-10">@Model.Username</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.ServiceProviderId" method="post">
    <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-sm btn-secondary">Cancel</a>
</form>
