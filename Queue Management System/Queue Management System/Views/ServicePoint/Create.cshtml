@model ServicePoint

<h2>Create New Service Point</h2>

<form asp-controller="ServicePoint" asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="ServicePointName" class="form-label">Service Point Name</label>
        <input asp-for="ServicePointName" class="form-control" required />
        <span asp-validation-for="ServicePointName" class="text-danger"></span>
        <div class="invalid-feedback">Please enter a service point name.</div>
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
