@model ServicePoint

<h1>Select Your Service Point</h1>

<form method="post" asp-action="SelectService">
    <div class="border p-5">
        <div class="row">
            <div class="col-4">
                <label for="ServicePoint"></label>
                <select asp-for="Name" asp-items="@ViewBag.PopulateServicePoint" class="form-control">
                    <option selected>--Select Your Service Point</option>
                </select>
            </div>
        </div>
        <br />

        <div class="w-12 btn-group" role="group">
            <input type="submit" class="btn btn-primary mx-1" value="save" />
            <a asp-action="Index" class="btn btn-danger mx-1">Back</a>
        </div>
    </div>
</form>
