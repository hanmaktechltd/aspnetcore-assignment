
@model TransferView

<h2>Transfer Number</h2>

<p>Transfer ticket @Model.Customers.Id to:</p>

<form method="post" asp-action="Transfer">
    <div class="form-group">
        <label for="servicePointId">Service Point:</label>
        <div class="col-4">
            <select class="form-control" id="servicePointId" name="servicePointId">
                @foreach (var servicePoint in Model.ServicePoints)
                {
                    <option class="form-control" value="@servicePoint.Id" name="servicePointId" style="color: black; width: 40%;">@servicePoint.Name</option>
                }
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Transfer</button>
</form>
