@model Queue_Management_System.Models.Customer

@{
    ViewBag.Title = "CustomerOnTheQueue";
}

<div class="container text-center my-5">
    <h1 class="display-3 fw-bold text-one ">Customer - Queue Management</h1>

    <h3>You have been added to the queue!</h3>

    <h3>Wait a little bit to be given a Service Point</h3>

    <div>
        <p><a asp-action="ViewTicketInfo" asp-route-customerId="@Model.Id" class="btn btn-lg btn-custom-pink mt-3">View Ticket Info</a></p>
    </div>

    <div>
        <a href="@Url.Action("GenerateCustomerQueueTicket", "Report")" class="btn btn-lg btn-custom-pink mt-3">Print Your Ticket </a>
    </div>

</div>

