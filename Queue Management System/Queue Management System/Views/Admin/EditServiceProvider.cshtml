@model ServiceProvider
@{
    Layout = "_LayoutAdminLoggedIn";
}
<partial name="_Notification" />

<h2>Edit Service Point Provider</h2>

<form asp-action="EditServiceProvider" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <div class="col-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password"/>
        </div>

        <div class="col-4">
            <label asp-for="ServicePointId"></label>
            <input asp-for="ServicePointId" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ServiceProviders" class="btn btn-danger mx-1">Back</a>
</form>
