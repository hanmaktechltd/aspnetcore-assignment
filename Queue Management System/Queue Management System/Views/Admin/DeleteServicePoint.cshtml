@model ServicePoint

@{
    Layout = "_LayoutAdminLoggedIn";
}

<h2>Delete A service Point</h2>

<p>Are you sure you want to delete this service point?</p>

<form asp-action="DeleteServicePoint" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <div class="col-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-4">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>
    </div>
    <div class="w-12 btn-group" role="group">
        <input type="submit" class="btn btn-primary mx-1" value="Delete" />
        <a asp-action="ServicePoints" class="btn btn-danger mx-1">Back</a>
    </div>
</form>
