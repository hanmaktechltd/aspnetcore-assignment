@model ServiceProvider

@{
    Layout = "_LayoutAdminLoggedIn";
}

<partial name="_Notification" />

<h2 class="mt-2">Add A new Service Provider</h2>

<form asp-action="AddServiceProvider" method="post">
    <div class="form-group">
        <div class="col-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password"/>
        </div>

        <div class="col-4">
            <label asp-for="ServicePointId"></label>
            <input asp-for="ServicePointId" class="form-control" />
        </div>

        <div class="mt-2">
            <button type="submit" class="btn btn-primary">Add</button>
            <a asp-action="ServiceProviders" class="btn btn-danger mx-1">Back</a>
        </div>
    </div>  
</form>
