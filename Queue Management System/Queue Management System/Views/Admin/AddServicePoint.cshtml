@model Queue_Management_System.Models.Spoints

@{
    ViewData["Title"] = "Recalling";

}
<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: white;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #dec3eb;
            color: white;
        }

    .divScroll {
        width: 1110px;
        height: 200px;
        overflow: auto;
    }
</style>

<h4>Add Service Point</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddServicePoint">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="Counter" class="control-label"></label>
                <input asp-for="Counter" class="form-control" />
                <span asp-validation-for="Counter" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="ServiceProvider" class="control-label"></label>

                <select asp-for="ServiceProvider" class="form-control" asp-items="@ViewBag.Points">
                    <option value="" disabled selected hidden>Choose Service Provider...</option>
                </select>
                <span asp-validation-for="ServiceProvider" class="text-danger"></span>
            </div><br><br>
            
            <div class="row">
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Service_Points">Back to List</a>
</div>
