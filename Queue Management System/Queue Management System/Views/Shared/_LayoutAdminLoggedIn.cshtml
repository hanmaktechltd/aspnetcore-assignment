@{ 
    string path = Context.Request.Path;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Queue Management System</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Authenticated"><h3>Queue Management System</h3></a>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                         <li class="nav-item">
                            <a class="nav-link @(path.EndsWith("/ServicePoints") ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="ServicePoints">Configure Service Points</a>
                        </li>

                         <li class="nav-item">
                            <a class="nav-link @(path.EndsWith("/ServiceProviders") ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="ServiceProviders">Configure Service Providers</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(path.EndsWith("/AnalyticalReports") ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="AnalyticalReports">Analytical Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(path.EndsWith("/AnalyticalReports") ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="Authenticated">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
