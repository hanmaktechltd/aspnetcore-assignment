@{ 
    string path = Context.Request.Path;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Queue Management System</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h3>Queue Management System</h3></a>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(path.StartsWith("/CheckIn") ? "active" : "")" asp-area="" asp-controller="CheckIn" asp-action="Index">CheckIn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(path.StartsWith("/Waiting") ? "active" : "")" asp-area="" asp-controller="Waiting" asp-action="Waiting">Waiting Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(path.StartsWith("/ServicePoint") ? "active" : "")" asp-area="" asp-controller="ServicePoint" asp-action="Login">Service Point</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(path.StartsWith("/Admin") ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="Login">Admin</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ServicePoint" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

                           @* <footer style="bottom:0;position:fixed;width:100%;background-color:orange;text-align:center;">
        <div class="container">
            &copy; 2023 - Queueing Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
