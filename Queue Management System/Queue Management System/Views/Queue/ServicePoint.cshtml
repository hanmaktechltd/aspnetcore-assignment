@model IEnumerable<Queue_Management_System.Models.CustomerService>

@{
    ViewData["Title"] = "Customers";

}

<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: white;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #dec3eb;
            color: white;
        }

    .divScroll {
        width: 1110px;
        height: 200px;
        overflow: auto;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="normal-table-list mg-t-30">
            <div class="row">
                <div class="col-lg-9 col-md-9  col-xs-9">
                    <a asp-action="Customers" class="btn btn-primary">Get next Number</a>
                    <a asp-action="Recall" class="btn btn-primary">Recall Number</a>
                    <a asp-action="Customers" class="btn btn-primary">View Queue</a>
                </div><br><br>
            </div>
            <div class="bsc-tbl-hvr table-border-style">
                <div class="divScroll">
                    <div class="table-responsive">
                        <table class="table table-hover" id="customers">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TicketNumber)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.ServiceRequested)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>



                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TicketNumber)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ServiceRequested)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>

                                          <td>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.TicketNumber">Update</a>
                                            <a class="btn btn-success" asp-action="Transfer" asp-route-id="@item.TicketNumber">Transfer</a>
                                    </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


