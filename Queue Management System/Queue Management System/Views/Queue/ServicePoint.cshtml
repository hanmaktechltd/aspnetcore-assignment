@model CheckinViewModel

<h3>Your ServicePoints</h3>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Service Point Name</th>
                <th>Description</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var servicePoint in Model.CurrentServiceProviderServicePoints)
            {
                <tr>
                    <td>@servicePoint.ServicePointName</td>
                    <td>@Html.DisplayFor(modelItem => servicePoint.Description)</td>
                    <td>
                        <a asp-action="ServicePointDetails" asp-controller="Queue" asp-route-id="@servicePoint.ServicePointId" asp-route-serviceProviderId="@Model.CurrentServiceProviderId" class="btn btn-outline-primary btn-sm">Open</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="Logout" asp-controller="Account" method="post">
    @Html.AntiForgeryToken()

    <div class="d-grid mt-3">
        <button type="submit" class="btn btn-outline-danger btn-lg">Logout</button>
    </div>
</form>

<div class="mt-3">
    <p class="text-muted">If you have the necessary permissions, you can also go to the <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-link text-danger">Admin Dashboard</a>.</p>
</div>
