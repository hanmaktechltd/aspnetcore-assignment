<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Queue </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Queue_Management_System.styles.css" asp-append-version="true" />

    <style>
        /* Define the table styling */
        .queue-table {
            width: 100%;
            border-collapse: collapse;
        }

            .queue-table th,
            .queue-table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .queue-table th {
                background-color: #f2f2f2;
            }

            .queue-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .queue-table tbody tr:hover {
                background-color: #f2f2f2;
            }

        /* Other styles for layout */
        .row {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin: 20px 0;
        }

        .info-field {
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            text-align: center;
            margin-right: 10px;
        }

            .info-field:last-child {
                margin-right: 0;
            }

            .info-field h3 {
                margin-bottom: 10px;
            }
    </style>
</head>
<body>
    <div id="queueEntries">
        <h2>Queue</h2>
        @model List<QueueEntry>

        @if (Model != null && Model.Any())
        {
            <table class="queue-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ticket Number</th>
                        <th>Service Point</th>
                        <th>Customer Name</th>
                        <th>Check-in Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var queueEntry in Model)
                    {
                        <tr>
                            <td>@queueEntry.Id</td>
                            <td>@queueEntry.TicketNumber</td>
                            <td>@queueEntry.ServicePoint</td>
                            <td>@queueEntry.CustomerName</td>
                            <td>@queueEntry.CheckinTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No queue entries available.</p>
        }
    </div>
</body>
</html>
