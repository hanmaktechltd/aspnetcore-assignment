@model Queue_Management_System.Models.CustomerService

@{
    ViewData["Title"] = "Recalling";

}


<h4>Recalling Tickets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Recalling">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TicketNumber" />
            <div class="form-group">
                <label asp-for="TicketNumber" class="control-label"></label>
                <input asp-for="TicketNumber" class="form-control" />
                <span asp-validation-for="TicketNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceRequested" class="control-label"></label>
                <input asp-for="ServiceRequested" class="form-control" />
                <span asp-validation-for="ServiceRequested" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                
                <select asp-for="Status" class="form-control" asp-items="@ViewBag.status">
                    <option value="Pending">Pending</option>
                    <option value="Finished">Finished</option>
                    <option value="No Show">No Show</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="serviceDate" class="control-label"></label>
                <input asp-for="serviceDate" class="form-control" />
                <span asp-validation-for="serviceDate" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Recall">Back to List</a>
</div>