@model TransferTicketViewModel

<div class="container mt-5">
    <h1 class="text-center">Transfer Ticket</h1>

    <p class="text-center">Transfer Ticket ID: @Model.TicketId</p>

    <form asp-controller="Queue" asp-action="CompleteTransfer" method="post" class="mx-auto">
        <div class="form-group text-center mb-3">
            <label for="destinationServicePointId">Select Destination Service Point:</label>
            <select class="form-control col-sm-6 mx-auto" asp-for="DestinationServicePointId" asp-items="@(new SelectList(Model.AvailableServicePoints, "ServicePointId", "ServicePointName"))">
                <option>Please select a service point</option>
            </select>
        </div>

        <div class="form-group text-center mb-3">
            <input type="hidden" name="OriginServicePointId" value="@Model.OriginServicePointId" />
            <input type="hidden" name="TicketId" value="@Model.TicketId" />
            <input type="hidden" name="CurrentServiceProviderId" value="@Model.CurrentServiceProviderId" />
        </div>

        <div class="form-group text-center mb-3">
            <button type="submit" class="btn btn-outline-primary">Transfer</button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger text-center mt-3"></div>
    </form>
</div>
