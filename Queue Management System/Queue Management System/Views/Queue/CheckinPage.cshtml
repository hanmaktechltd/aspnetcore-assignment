@model Queue_Management_System.Models.ViewModels.CheckInViewModel

@{
    ViewData["Title"] = "CheckinPage";
}

<h1>CheckinPage</h1>

<h4>CheckInViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckinPage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class="form-control" asp-items="@ViewBag.ServicePoints"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="WaitingPage">Go to waiting Page</a>
</div>

