@model Queue_Management_System.Models.ServicePoint
<h1>Edit Service Point</h1>
@if (Model != null)
 {
    <form asp-controller="ServicePoint" asp-action="Edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label for="Name">Service Point Name:</label>
            <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
</form>
}