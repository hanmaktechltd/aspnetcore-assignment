@page

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>["Title"] - Queue Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Queue_Management_System.styles.css" asp-append-version="true" />
    <!-- Other meta tags, stylesheets, or scripts you want to include -->
    <style>
        .functionality-section {
            background-color: #f0f0f0;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 20px;
        }

            .functionality-section a {
                display: inline-block;
                text-decoration: none;
                color: #333;
                font-weight: bold;
                margin-top: 20px;
                padding: 15px 30px;
                border: 2px solid #333;
                border-radius: 5px;
                transition: background-color 0.3s, color 0.3s;
            }

                .functionality-section a:hover {
                    background-color: #333;
                    color: white;
                }
    </style>
</head>
<body>
    <header>
        <!-- Your header content -->
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Navigation Section -->
          

            <main class="col-lg-10">
                <section class="functionality-section">
                    <h2>Check-In Page</h2>
                    <p>Allows customers to select their service and generate tickets.</p>
                    <a href="/Queue/CheckinPage">Go to Check-In</a>
                </section>

                <section class="functionality-section">
                    <h2>Waiting Page</h2>
                    <p>Displays called customer's details.</p>
                    <a href="/Queue/WaitingPage">Go to Waiting</a>
                </section>
            </main>
        </div>
    </div>

    <footer>
        <!-- Footer content -->
    </footer>

    <!-- Bootstrap and other scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Any additional scripts -->
</body>
</html>
