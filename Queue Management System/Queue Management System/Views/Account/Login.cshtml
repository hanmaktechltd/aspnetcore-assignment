@model Queue_Management_System.Models.LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center ">

    <h1 class="text-center">Login</h1>
    
    <div class="col-md-3 card card-outline" style="padding: 30px;">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.ReturnUrl)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-8">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberLogin" /> @Html.DisplayNameFor(model => model.RememberLogin)
                        </label>
                    </div>
                </div>
                <div class="col-4 ">
                    <input type="submit" value="Login" class="btn btn-primary btn-block float-end" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}