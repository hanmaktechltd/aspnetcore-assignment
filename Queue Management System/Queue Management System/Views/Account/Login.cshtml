@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Login</h2>

                    <form asp-action="LoginPost" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="username" class="form-label">Service Provider:</label>
                            <select id="username" name="Username" class="form-select" required>
                                <option value="" disabled selected>Select Service Provider</option>
                                @foreach (var serviceProvider in Model.AvailableServiceProviders)
                                {
                                    <option value="@serviceProvider.Username">@serviceProvider.Username</option>
                                }
                            </select>
                            <div class="invalid-feedback">Please select a service provider.</div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" id="password" name="Password" class="form-control" required>
                            <div class="invalid-feedback">Please enter your password.</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-outline-primary btn-block">Login</button>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
